{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start vite",
      "type": "npm",
      "script": "dev",
      "cwd": "${workspaceFolder}/frontend",
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "panel": "dedicated"
      },
      "problemMatcher": {
        "owner": "vite",
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE",
          "endsPattern": "Local:"
        }
      }
    },
    {
      "label": "stop vite",
      "command": "echo",
      "args": ["Vite stopped"],
      "type": "shell"
    }
  ]
}